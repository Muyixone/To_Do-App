<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>To_Do App</title>
  </head>
  <body>
    <div class="todos-container">
      <header class=""><h2>My Todos</h2></header>
      <main class="todos-main">
        <form action="" id="add-form" method="post">
          <div class="todos-name-field">
            <input
              type="text"
              id="task-name"
              name="name"
              placeholder="Enter name of Task"
            />
          </div>
          <div class="todos-name-field">
            <input
              type="text"
              id="task-description"
              name="description"
              placeholder="Enter task Descrioption"
            />
          </div>
          <button type="submit" class="add-task">Add Task</button>
        </form>

        <div class="todos-display-task">
          <ul>
            <% todos.forEach(function(item) { %> <% if (item.name ||
            item.description) { %> <% if (item.id == id) { %>
            <li>
              <strong><%= item.name %></strong><br />
              <%= item.description %>
              <span> <%= item.day %></span>
              <form action="/todo/updatetask/<%= item.id %>" method="post">
                <input type="text" value="<%= item.name %>" name="name" />
                <input
                  type="text"
                  value="<%= item.description %>"
                  name="description"
                />
                <button>Edit</button>
              </form>
              <a href="/todo" class="cancel">Cancel</a>
              <!-- <form action="/todo/removetask/<%= item.id %>" method="post">
                      <button>Delete</button>
                    </form> -->
            </li>
            <% } else { %>
            <li>
              <strong><%= item.name %></strong><br />
              <%= item.description %>
              <span> <%= item.day %></span>
              <a href="/todo/updatetask/<%= item.id %>" class="edit">
                <span></span>
              </a>
              <form action="/todo/removetask/<%= item.id %>" method="post">
                <button>Delete</button>
              </form>
            </li>
            <% } %> <% } %> <% }); %>
          </ul>
        </div>
      </main>
    </div>
  </body>
</html>
